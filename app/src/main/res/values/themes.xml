<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimerBreathing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="systemButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/roundedbutton</item>
    </style>
    <style name="breathButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/oval_button</item>
    </style>
    <style name="infoFragmentTextStyle">
        <item name="fontFamily">@font/mazzardh_extralight</item>
        <item name="tabStyle">@id/italic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:letterSpacing">0.07</item>
    </style>
    <style name="TextStyleScheme">
        <item name="fontFamily">@font/mazzardh_extralight</item>
        <item name="tabStyle">@id/italic</item>
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:letterSpacing">0.14</item>
    </style>
    <style name="TextStyleRelax">
        <item name="fontFamily">@font/mazzardh_extralight</item>
        <item name="tabStyle">@id/italic</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:letterSpacing">0.14</item>
    </style>
</resources>